        <item name="colorAccent">@color/yellow</item>

    </style>

    <style name="CardAppearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_corner_radius</item>
